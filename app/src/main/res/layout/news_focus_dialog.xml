<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/focus_news_detail_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/no_image_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mdimen">

            <ImageView
                android:id="@+id/focus_news_detail_dateicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ldimen"
                android:src="@drawable/ic_date_range_white_24dp"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/focus_news_detail_publishDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/sdimen"
                android:layout_marginEnd="@dimen/ldimen"
                android:layout_toEndOf="@id/focus_news_detail_dateicon"
                android:textColor="@color/colorAccent"
                tools:text="2019-03-14" />

            <ImageView
                android:id="@+id/news_detail_sourceicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ldimen"
                android:layout_toStartOf="@id/focus_news_detail_source"
                android:src="@drawable/ic_person_white_24dp"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/focus_news_detail_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/sdimen"
                android:layout_marginEnd="@dimen/ldimen"
                android:textColor="@color/colorAccent"
                tools:text="google.com" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ldimen"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/focus_news_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mdimen"
                android:layout_marginTop="@dimen/mdimen"
                android:layout_marginEnd="@dimen/mdimen"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:text="Osteoarthritis patients who are considering a hip or knee replacement surgery will now have a better idea of long-term success rates, thanks to a large study involving thousands of global cases, including Australia. Published in The Lancet on Saturday, the stâ€¦ [+3341 chars]" />
        </ScrollView>

    </LinearLayout>
</LinearLayout>